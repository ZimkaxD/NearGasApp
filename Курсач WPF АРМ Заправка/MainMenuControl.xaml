<UserControl x:Class="Курсач_WPF_АРМ_Заправка.MainMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Курсач_WPF_АРМ_Заправка"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid x:Name="MainMenuControll">
        <Button Content="Тёмная/Светлая тема" Click="ModeButton_Click" Margin="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="50" FontFamily="Harlow Solid Italic" />
        <Button Content="Рассчёт стоимости топлива" Click="OpenFuelWindowButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="60" FontFamily="Harlow Solid Italic" RenderTransformOrigin="0.502,0.08" />
        <Button Content="Заказать топливо" Click="BuyFuelButton_Click" Margin="0,335,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="300" Height="60" FontFamily="Harlow Solid Italic" />
    </Grid>
</UserControl>
